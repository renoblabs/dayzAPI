# Cloudflare Tunnel configuration for DayZ HiveAPI
# Save as config.yml (without .sample) and update with your values

# Tunnel identifier (from Cloudflare dashboard)
tunnel: <TUNNEL_ID_HERE>

# Path to credentials file (from Cloudflare dashboard)
credentials-file: /etc/cloudflared/credentials.json

# Ingress rules (routing configuration)
ingress:
  # Route your hostname to the API service
  - hostname: <YOUR_HOSTNAME_HERE>
    service: http://api:8000
    originRequest:
      # Inject origin secret for verification
      headers:
        X-Origin-Secret: ${ORIGIN_SECRET}

  # Catch-all rule (required) - returns 404 for any other hostnames
  - service: http_status:404

# TLS settings
# Uncomment and modify if needed
# tls:
#   disableChunkedEncoding: true
#   noTLSVerify: false

# Metrics
metrics: 0.0.0.0:2000

# Logging
logFile: /var/log/cloudflared.log
loglevel: info

# Uncomment to enable automatic updates
# autoupdate: true
